<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ControlActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/centerimage"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="0dp"
        android:cropToPadding="false"
        android:padding="6dp"
        android:visibility="visible"
        app:srcCompat="@drawable/capture1"
        tools:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/centerimage"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/CrossImage"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/cross" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@android:style/Widget.Material.Light.SeekBar"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/TickImage"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/check" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/control"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible"
        tools:layout_below="@id/control">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/b1" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/b2" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/b3" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/b4" />

    </LinearLayout>

</RelativeLayout>
</ScrollView>